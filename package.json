{
	"name": "@natlibfi/melinda-record-import-transformer-onix",
	"description": "ONIX record transformer for the Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-transformer-onix",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-transformer-onix/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-transformer-onix.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"bin": "./dist/cli.js",
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"start": "node dist/index.js",
		"check-deps": "npm-check || exit 0",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test": "npm run lint",
		"test:dev": "npm run lint:dev",
		"build": "babel src --source-maps --delete-dir-on-start --out-dir=dist",
		"build:dev": "npm run build && npm run check-deps",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=test chokidar src -c 'npm run test:dev'",
		"watch:dev": "chokidar src -c 'npm run build:transpile && node dist/index.js'"
	},
	"dependencies": {
		"@babel/core": "^7.6.4",
		"@natlibfi/marc-record": "^4.0.4",
		"@natlibfi/marc-record-serializers": "^4.1.0",
		"@natlibfi/marc-record-validate": "^5.0.0",
		"@natlibfi/marc-record-validators-melinda": "^8.2.0",
		"@natlibfi/melinda-record-import-commons": "^7.0.1",
		"moment": "^2.22.2",
		"sax-stream": "^1.3.0",
		"xmlfmt": "^1.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.6.4",
		"@babel/preset-env": "^7.6.3",
		"@babel/register": "^7.6.2",
		"babel-eslint": "^10.0.3",
		"babel-plugin-rewire": "^1.2.0",
		"cross-env": "^5.2.1",
		"eslint": "^6.5.1",
		"eslint-config-standard": "^14.1.0",
		"eslint-config-xo": "^0.27.1",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-node": "^10.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"nodemon": "^1.19.3",
		"npm-check": "^5.7.1"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "7"
					}
				}
			]
		]
	}
}
