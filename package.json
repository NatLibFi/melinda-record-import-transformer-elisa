{
	"name": "@natlibfi/melinda-record-import-transformer-onix",
	"description": "ONIX record transformer for the Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-transformer-onix",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-transformer-onix/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-transformer-onix.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"bin": "./dist/transform-cli.js",
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"start": "babel-node src/index.js",
		"cli": "babel-node src/cli.js",
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test mocha --require @babel/register",
		"test": "npm run lint && npm run test:base -- src/**/*.spec.js",
		"build:transpile": "babel src --source-maps --delete-dir-on-start --out-dir=dist --minified",
		"build": "npm run build:transpile && npm run check-deps",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'npm test && babel-node src/index.js'",
		"watch:build": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'babel-node src/index.js'"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^1.1.0",
		"@natlibfi/marc-record-serializers": "^1.0.2",
		"@natlibfi/marc-record-validate": "^3.0.0",
		"@natlibfi/marc-record-validators-melinda": "^3.0.0",
		"@natlibfi/melinda-record-import-commons": "^3.1.1",
		"moment": "^2.22.2",
		"sax-stream": "^1.2.3",
		"xmlfmt": "^1.0.0"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-eslint": "^9.0.0",
		"babel-preset-env": "^1.6.1",
		"babel-register": "^6.26.0",
		"cross-env": "^5.2.0",
		"eslint": "^5.5.0",
		"eslint-config-xo": "^0.24.2",
		"eslint-plugin-import": "^2.14.0",
		"nodemon": "^1.18.3",
		"npm-check": "^5.7.1",
		"rimraf": "^2.6.2"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		}
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"node": "7"
					}
				}
			]
		]
	}
}
